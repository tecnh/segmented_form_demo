= javascript_for_validatious
- segmented_form_for @person, :id => current_form do |f|
	%p
	- f.inputs do
		= f.input :age, :label => 'Age'
		%br
		= f.input :status, :label => 'Status', :collection => ["alive", "deceased"]
		%br
		= f.input :city_of_birth, :label => 'City of birth'
		= f.pseudo_buttons current_form, last_form, next_form