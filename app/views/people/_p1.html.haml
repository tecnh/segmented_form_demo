= javascript_for_validatious
- form_name = 'p1'
- semantic_form_for @person, :html => {:class => 'validate', :id => form_name } do |f|
	= f.error_messages
	%p
	- f.inputs do
		= f.input :first_name, :label => 'First name'
		= f.input :last_name, :label => 'Last name'
		= f.submit "Submit"
		%br
		= link_to_function "submit - javascript", "copy_form($('##{form_name}'))"